<p id="notice"><%= notice %></p>

<p>
  <strong>Nightclub:</strong>
  <%= @table.nightclub_id %>
</p>

<p>
  <strong>Min cost:</strong>
  <%= @table.min_cost %>
</p>

<%= render :partial=>'new_reservation', :locals=> {:reservation => Reservation.new(:table_id=> @table.id)} %>

<%= form_tag charges_path do %>
  <article>
    <label class= "amount">
      <span>Amount: <%= @table.min_cost %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Bottle Service"
          data-amount=   <%= @table.min_cost %> ></script>
<% end %>

<%= link_to 'Edit', edit_table_path(@table) %> |
<%= link_to 'Back', tables_path %>
