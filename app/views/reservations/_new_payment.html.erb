<%= form_for(payment) do |f| %>
  <% if payment.errors.any? %>
    <div id="errors" class="message error">
      <%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:

      <ul>
      <% payment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%- if @cc_last_4 %>
    <div class="field">
      <input type="radio" name="saved_card" value="true"/> Saved Card
      <input type="radio" name="saved_card" value="false"/> New Card
    </div>

    <div id="saved_card">
      <div class="field">
        <label>Saved Card</label>
        <input id="saved-number" type="text" disabled="true" value="&bull;&bull;&bull;&bull; &bull;&bull;&bull;&bull; &bull;&bull;&bull;&bull; <%= @cc_last_4 %>" />
      </div>
    </div>
  <%- end %>
  <div id="new_card">
    <div class="field">
      <%= f.hidden_field :stripe_token %>
    </div>


   <div class="field">
    <%= f.hidden_field :user_id %>
  </div>

  <div class="field">
    <%= f.hidden_field :table_id %>
  </div>
  <div class="field">
    <%= f.hidden_field :females %>
  </div>

  <div class="field">
    <%= f.hidden_field :males %>
  </div>

<div class="field">
    <%= f.hidden_field :reservation_date %>
  </div>

<div class="field">
    <%= f.hidden_field :nightclub_id %>
  </div>


<div class="field">
    <%= f.hidden_field :hookup %>
  </div>

  <form role="form">

    <div class="form-group">
      <label>Card Number</label>
      <input id="card-number" class="form-control" type="text" placeholder="4242 4242 4242 4242" />
    </div>
    <div class="form-group">
      <label>CV Code</label>
      <input id="cvc" class="form-control" type="text" placeholder="123" />
    </div>
    <div class="form-group">
      <label>Expiry Month</label>
      <input id="exp-month" class="form-control" type="text" placeholder="12" />
    </div>
    <div class="form-group">
      <label>Expiry Year</label>
      <input id="exp-year" class="form-control" type="text" placeholder="14" />
    </div>

  <div class="field">
     <%= f.hidden_field :amount %>

  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary btn-block" %>
  </div>

</form>
</div>
<% end %>
