
<table class="table table-hover">
  <thead>
    <tr>
      <div class="table">
      <th>Hotel</th>
      <th>Table</th>
      <th>Date</th>
    </div>
    </tr>
  </thead>

  <tbody>
    <% reservation.each do |reservation| %>
    <% if reservation.user == current_user %>
    <% if reservation.reservation_date > Date.today.to_s %>
    <% r=reservation.table_id %>
    <% n=Table.find(r).nightclub_id %>
      <tr>
        <td><%= Nightclub.find(n).name %></td>
        <td><%= reservation.table_id %></td>
        <td><%= reservation.reservation_date.strftime("%a %d %b %Y")   %></td>

      </tr>
      <%end%>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

