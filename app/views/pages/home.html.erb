<% if user_signed_in? %>
 <% if current_user.oauth_token %>
      <% @graph = Koala::Facebook::API.new(current_user.oauth_token) %>
      <% @a = @graph.get_object("me") %>
      <% @friends = @graph.get_connections("me", "friends") %>

<div class="container-fluid">
    <div class="row">
      <div class="col-md-5">
        <div class="jumbotron">
        <img src ="<%= @picture = @graph.get_picture( "me", type: :large) %>" >
        <h5> Name: <%= @a["name"] %> </h5>
        <% b = 0 %>
        <% @friends.each do |f| %>
          <% b = b+1 %>
        <% end %>
        <h5> Number of Facebook Friends: <%= b %> </h5>

        <% if @a["location"] %>
          <h5>City: <%= @a["location"]["name"] %></h5>
        <%else%>
          <h5> City: New York, NY </h5>
        <%end%>
        <h5>Status: <%if b>=1000%> Party Animal <%else%> Yolo Monster <%end%>
      </div>
    </div>
      <div class="col-md-7">
        <div class="jumbotron">
        <h5> Here are your futre Reservations </h5>
        <%= render :partial=>'show_reservations', :locals=> {:reservation => Reservation.find(:all),:table =>Table.find(:all), :nightclub => Nightclub.find(:all)} %>
      </div>
      </div>
    </div>
</div>


<div class="jumbotron center">
          <h3> <%= @a["name"] %> Let's Book you a table </h3>
          <%= render :partial=>'show_nightclubs', :locals=> {:nightclub => Nightclub.find(:all)} %>

  <% else %>

    <h3> <%= current_user.email %> Let's Book you a table </h3>
          <%= render :partial=>'show_nightclubs', :locals=> {:nightclub => Nightclub.find(:all)} %>

         
  <% end %>

</div>

     <% else %>

<div class="jumbotron center">

<h4>Clublist gets you connected to the top nightclubs in your city.</h4>
</br>
<h4> No texting club promoters or getting turned away at the door. Take control of your night!</h4>

     <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
     <% end %>



</div>