<div class="jumbotron">
<%Contact.connection%>
<div class="page-header">
<h2> Contact Social Axis </h2>
</div>

<p>Social Axis connects you to the most exclusive nightclubs in your city, while rewarding you for being socially connected. Want to learn more? Shoot us a note. </p>

<h3> Contact Form </h3>

<form role="form">
	 <%= simple_form_for contact do |f| %>
<div class="form-group">
       <%= f.input :name, :required => true, class: "form-control" %>
</div>

<div class="form-group">
      <%= f.input :email, :required => true,  class: "form-control" %>
</div>

<div class="form-group">
        <%= f.input :message, :as => :text, :required => true,  class: "form-control" %>
</div>

 <div class="actions">
       <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
  </div>

  <%end%>

</form>

</div>


 